<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary">


    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="700dp"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"

                android:text="@string/register"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_username"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:drawableEnd="@drawable/ic_account_circle"
                android:inputType="text"
                android:autofillHints="username"
                android:hint="@string/username"
                android:textColorHint="@color/primary"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register_username"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:drawableEnd="@drawable/ic_email"
                android:inputType="textEmailAddress"
                android:autofillHints="name"
                android:hint="@string/email"
                android:textColorHint="@color/primary"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_firstname"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register_email"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/firstname"
                android:textColorHint="@color/primary"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_lastname"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register_firstname"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:inputType="text"
                android:autofillHints="name"
                android:hint="@string/lastname"
                android:textColorHint="@color/primary"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_birthdate"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register_lastname"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:inputType="date"
                android:autofillHints="name"
                android:hint="@string/birthdate"
                android:textColorHint="@color/primary"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="325dp"
                android:layout_height="48dp"
                android:layout_below="@id/register_birthdate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:background="@drawable/shape_account_input"
                android:drawableEnd="@drawable/ic_lock"
                android:autofillHints="password"
                android:hint="@string/password"
                android:textColorHint="@color/primary"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_password"
                android:layout_alignStart="@id/register_password"
                android:layout_alignEnd="@id/register_password"
                android:minHeight="48dp"
                android:background="@drawable/shape_button"
                app:backgroundTint="@color/primary"
                android:layout_marginTop="50dp"
                android:text="@string/register" />

            <TextView
                android:id="@+id/yet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="@string/yet" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>